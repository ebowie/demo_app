<h1>Listing anythings</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @anythings.each do |anything| %>
      <tr>
        <td><%= anything.content %></td>
        <td><%= anything.user_id %></td>
        <td><%= link_to 'Show', anything %></td>
        <td><%= link_to 'Edit', edit_anything_path(anything) %></td>
        <td><%= link_to 'Destroy', anything, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

